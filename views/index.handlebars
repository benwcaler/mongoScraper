<div id="stories">
  {{#each stories}}
  <div class="stories">
    <h3>
      <a target="_blank" href="{{link}}">{{title}}</a>
    </h3>
    <p>{{synopsis}}</p>
    <button class="addC" data-id="{{_id}}">Show/hide comments</button>
    <div class="comments" id="{{_id}}">
      <h3>Comments</h3>
      <div class="commentsBox">
        {{#each comments}}
        <div><strong>{{author}}</strong> - {{comment}}</div>
        <button class="del" data-id="{{_id}}">X</button>
        {{/each}}
      </div>
      <form>
        <input type="text" id="author">
        <textarea name="comment" id="txtarea" cols="30" rows="10"></textarea>
        <button class="cancelC" data-id="{{_id}}">Cancel</button>
        <button class="submit" type="submit" data-id="{{_id}}">Submit</button>
      </form>
    </div>
  </div>
  <br> {{/each}}
</div>